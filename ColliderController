using System;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class ColliderController : MonoBehaviour
{
	public Camera orthoCam;
	[SerializeField]
    private Collider[] colliders;

    void Start()
    {
        // Disable colliders at the start
        DisableColliders();
    }

    void Update()
    {
        // Check for mouse click
        if (Input.GetMouseButtonDown(0))
        {
				ToggleColliders();
        }

        // Check for spacebar press
        if (Input.GetKeyDown(KeyCode.Space))
        {
            // Disable colliders on spacebar press
            DisableColliders();
        }
    }

    void ToggleColliders()
    {
        // Toggle colliders on the array of objects
        foreach (Collider collider in colliders)
        {
            collider.enabled = true;
        }
    }

    void DisableColliders()
    {
        // Disable colliders on the array of objects
        if (colliders == null)
        {
            // Get all colliders on the objects and store them in the array
            colliders = GetComponentsInChildren<Collider>();
        }

        foreach (Collider collider in colliders)
        {
            collider.enabled = false;
        }
    }
}
